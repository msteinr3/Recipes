<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/addRecipe">

    <fragment
        android:id="@+id/settings"
        android:name="com.example.recipies.ui.Settings"
        android:label="settings_fragment"
        tools:layout="@layout/settings_fragment" />
    <fragment
        android:id="@+id/addRecipe"
        android:name="com.example.recipies.ui.AddRecipe"
        android:label="add_fragment"
        tools:layout="@layout/add_fragment" >
        <action
            android:id="@+id/action_addRecipe_to_myList"
            app:destination="@id/myList" />
    </fragment>
    <fragment
        android:id="@+id/favorites"
        android:name="com.example.recipies.ui.Favorites"
        android:label="favorites_fragment"
        tools:layout="@layout/favorites_fragment" >
        <action
            android:id="@+id/action_favorites_to_singleRecipe"
            app:destination="@id/singleRecipe" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.example.recipies.ui.Home"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_home_to_singleRecipe"
            app:destination="@id/singleRecipe" />
    </fragment>
    <fragment
        android:id="@+id/myList"
        android:name="com.example.recipies.ui.MyList"
        android:label="my_list_fragment"
        tools:layout="@layout/my_list_fragment" >
        <action
            android:id="@+id/action_myList_to_singleRecipe"
            app:destination="@id/singleRecipe" />
    </fragment>
    <fragment
        android:id="@+id/singleRecipe"
        android:name="com.example.recipies.ui.SingleRecipe"
        android:label="recipe_fragment"
        tools:layout="@layout/recipe_fragment" >
        <action
            android:id="@+id/action_singleRecipe_to_addRecipe"
            app:destination="@id/addRecipe" />
    </fragment>
</navigation>